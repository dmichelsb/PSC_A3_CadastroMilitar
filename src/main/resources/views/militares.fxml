<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720" prefWidth="1280" styleClass="anchor-pane" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MilitaresController">

    <VBox prefWidth="1000.0" spacing="10" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- Filtro -->
        <HBox spacing="10">
            <TextField fx:id="filtroField" promptText="Filtrar por nome ou saram" HBox.hgrow="ALWAYS" />
            <Button onAction="#filtrar" text="Filtrar" />
            <Button onAction="#limparFiltro" text="Limpar Filtro" />
        </HBox>

        <!-- Tabela -->
        <TableView fx:id="tabelaMilitares" prefHeight="400" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colSaram" prefWidth="80" text="Saram" />
                <TableColumn fx:id="colNome" prefWidth="180" text="Nome Completo" />
                <TableColumn fx:id="colPosto" prefWidth="200.0" text="Patente" />
                <TableColumn fx:id="colAdmissao" prefWidth="100" text="Admissão" />
                <TableColumn fx:id="colCpf" prefWidth="120" text="CPF" />
                <TableColumn fx:id="colSexo" prefWidth="80" text="Sexo" />
                <TableColumn fx:id="colNascimento" prefWidth="100" text="Nascimento" />
                <TableColumn fx:id="colNaturalidade" prefWidth="120" text="Naturalidade" />
                <TableColumn fx:id="colQuadro" prefWidth="100" text="Quadro" />
                <TableColumn fx:id="colUnidade" prefWidth="100" text="Unidade" />
                <TableColumn fx:id="colSituacao" prefWidth="100" text="Situação" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
      <VBox prefHeight="118.0" prefWidth="960.0">
         <children>
      
              <!-- Botões -->
              <HBox alignment="CENTER" prefHeight="33.0" prefWidth="960.0" spacing="10">
                  <Button onAction="#adicionar" text="Adicionar" />
                  <Button onAction="#editar" text="Editar" />
                  <Button onAction="#remover" text="Remover" />
              </HBox>
              <HBox alignment="CENTER" prefHeight="67.0" prefWidth="960.0" spacing="30" style="-fx-padding: 10;">
               <StackPane prefHeight="48.0" prefWidth="652.0">
                  <children>
                     <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="58.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" style="-fx-fill: #293219; -fx-arc-width: 20; -fx-arc-height: 20;" width="652.0" />
                     <HBox alignment="CENTER" prefHeight="52.0" prefWidth="652.0" spacing="20.0" StackPane.alignment="CENTER">
                        <children>
                              <Label fx:id="totalLabel" text="Militares Cadastrados: 0" textFill="WHITE">
                              <font>
                                 <Font size="18.0" />
                              </font>
                           </Label>
                              <Label fx:id="ativosLabel" text="Militares Ativos: 0" textFill="WHITE">
                              <font>
                                 <Font size="18.0" />
                              </font>
                           </Label>
                              <Label fx:id="homensLabel" text="Homens: 0" textFill="WHITE">
                              <font>
                                 <Font size="18.0" />
                              </font>
                           </Label>
                              <Label fx:id="mulheresLabel" text="Mulheres: 0" textFill="WHITE">
                              <font>
                                 <Font size="18.0" />
                              </font>
                           </Label>
                        </children>
                     </HBox>
                  </children>
               </StackPane>
              </HBox>
         </children>
      </VBox>

    </VBox>
</AnchorPane>
